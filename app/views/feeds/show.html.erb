<%- model_class = @feed.class -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:url) %>:</strong></dt>
  <dd><%= @feed.url %></dd>
  <dt><strong><%= model_class.human_attribute_name(:name) %>:</strong></dt>
  <dd><%= @feed.name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:customer_type) %>:</strong></dt>
  <dd><%= @feed.customer_type %></dd>
  <dt><strong><%= model_class.human_attribute_name(:status) %>:</strong></dt>
  <dd><%= @feed.status %></dd>
  <dt><strong><%= model_class.human_attribute_name(:seconds_old) %>:</strong></dt>
  <dd><%= @feed.seconds_old %></dd>
  <dt><strong><%= model_class.human_attribute_name(:include_downloaded) %>:</strong></dt>
  <dd><%= @feed.include_downloaded %></dd>
  <dt><strong><%= model_class.human_attribute_name(:api_username) %>:</strong></dt>
  <dd><%= @feed.api_username %></dd>
  <dt><strong><%= model_class.human_attribute_name(:api_password) %>:</strong></dt>
  <dd><%= @feed.api_password %></dd>
  <dt><strong><%= model_class.human_attribute_name(:sort_by) %>:</strong></dt>
  <dd><%= @feed.sort_by %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              feeds_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_feed_path(@feed), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              feed_path(@feed),
              :method => 'delete',
              :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')),
              :class => 'btn btn-danger' %>
</div>
